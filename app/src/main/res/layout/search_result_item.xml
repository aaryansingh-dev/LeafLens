<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:weightSum="3"

    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"

    android:background="@drawable/rounded_search_item_border">

    <ImageView
        android:id="@+id/search_result_item_Image"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"

        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:src="@drawable/powdery_mildew_sample"
        />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/search_result_item_severity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Severity"
            android:textSize="15sp"
            android:gravity="right"

            android:paddingEnd="10dp"
            android:paddingStart="10dp"/>

        <TextView
            android:id="@+id/search_result_item_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="25sp"
            android:text="Some Disease"
            android:textStyle="bold"

            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:id="@+id/search_result_item_Disease_Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Category"
            android:textSize="20sp"

            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            />
        
    </LinearLayout>

</LinearLayout>