<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/homepage_newsItemImage"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@drawable/profile_image"

        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintStart_toEndOf="@+id/homepage_newsItemImage"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/homepage_newsItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="News Headline"
            android:textSize="20sp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/homepage_newsItemAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="News Headline"
            android:textSize="10sp"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/homepage_newsItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="Some news"
            android:textSize="15sp"
            android:layout_margin="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>